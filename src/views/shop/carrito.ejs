<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CARRITO | FUNKOSHOP</title>
    <link rel="stylesheet" href="/css/styles.css">
    <script src="https://kit.fontawesome.com/1095b3c2ab.js" crossorigin="anonymous"></script>
</head>
<body>
    <%- include('../partials/header') %>

    <main> <!-- Inicio Main -->
        <section class="cart container">
            <h2 class="cart-product__title">CARRITO DE COMPRAS</h2>
            <section class="cart-product">

                <div class="cart-product__column">
                    <span>DETALLE DEL PRODUCTO</span>
                </div>

                <div class="cart-product__column">
                    <span>CANTIDAD</span>
                </div>

                <div class="cart-product__column">
                    <span>TOTAL</span>
                </div>

                <div>

                </div>
            </section>

            <section >
                <article class="cart-product">
                    <div class="cart-product__item">
                        <picture class="cart-product__picture">
                            <img src="../img/star-wars/trooper-1.webp" alt="Figura coleccionable Funko de Grogu de la serie The Mandalorian">
                        </picture>
                        <div class="cart-product__detail">
                            <h4 class="cart-product__name">BABY YODA BLUEBALL</h4>
                            <p class="cart-product__license">STAR WARS</p>
                            <p class="cart-product__price">$ 1799,99</p>
                        </div>
                    </div>    
                    <div class="cart-product__cant">
                        <input type="number" name="" id="">
                    </div>
                    <div class="cart-product__item-total">
                        <p>$ 3599,98</p>
                    </div>
                    <div>
                        <button class="cart-item__remove">
                            <i class="fa-regular fa-circle-xmark fa-2xl" style="color: #ff0000;"></i>
                        </button>
                    </div>
                </article>

                <article class="cart-product">
                    <div class="cart-product__item">
                        <picture class="cart-product__picture">
                            <img src="../img/pokemon/pidgeotto-1.webp" alt="Figura coleccionable Funko de PIDGEOTTO">
                        </picture>
                        <div class="cart-product__detail">
                            <h4 class="cart-product__name">PIDGEOTTO</h4>
                            <p class="cart-product__license">POKEMON</p>
                            <p class="cart-product__price">$ 1799,99</p>
                        </div>
                    </div>  
                    <div class="cart-product__cant">
                        <input type="number" name="" id="">
                    </div>
                    <div class="cart-product__item-total">
                        <p>$ 1799,99</p>
                    </div>
                    <div>
                        <button class="cart-item__remove">
                            <i class="fa-regular fa-circle-xmark fa-2xl" style="color: #ff0000;"></i>
                        </button> 
                    </div>
                </article>
            </section>

            <section class="cart-resumen">
                <div class="cart-product__title-container">
                    <h2 class="cart-product__title">RESUMEN</h2>
                </div>

                <article class="cart-resumen__container cart-product">
                    <div class="cart-resumen__sub-container">
                        <p class="cart-resumen__item">CANTIDAD DE ELEMENTOS</p>
                        <p class="cart-resumen__sum">3</p>
                    </div>
                    <div class="cart-resumen__sub-container">
                        <p class="cart-resumen__item">SUBTOTAL</p>
                        <p class="cart-resumen__sum">$ 5399,97</p>
                    </div>
                    <div class="cart-resumen__sub-container">
                        <p class="cart-resumen__item">ENVIO</p>
                        <p class="cart-resumen__sum"> $0,00</p>
                    </div>
                    
                    <div class="cart-resumen__sub-container">
                        <div>
                            <p class="cart-resumen__tot">TOTAL</p>
                            <p class="cart-product__total-price"> $ 5399,97</p>
                        </div>
                    </div>
                </article>
                <div class="cart-resumen__container">
                    
                    <button class="cart-resumen__btn">IR A PAGAR</button>
                </div>
            </section>
        </section>
    </main> <!-- Fin Main -->

    <%- include('../partials/footer') %>
</body>
</html>
